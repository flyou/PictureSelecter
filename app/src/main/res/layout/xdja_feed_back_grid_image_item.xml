<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/feed_back_image_size"
    android:layout_height="@dimen/feed_back_image_size"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_feed_back_item"
        android:layout_width="@dimen/feed_back_image_size"
        android:layout_height="@dimen/feed_back_image_size"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:focusable="true"
        tools:src="@drawable/img_pic_default"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/delBtn"
        android:layout_width="@dimen/feed_back_detail_padding_left"
        android:layout_height="@dimen/feed_back_detail_padding_left"
        android:layout_marginRight="4dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/xdja_feed_back_picture_delete"
        android:visibility="gone"/>


</RelativeLayout>