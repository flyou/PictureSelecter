<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">
    <ImageView
        android:id="@+id/img_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/picture_selector_column_w_h"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/duration_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/picture_selector_padding_6"
        android:layout_marginBottom="@dimen/picture_selector_padding_6"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:textColor="@color/picture_selector_white"/>
    <TextView
        android:id="@+id/size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/picture_selector_padding_6"
        android:layout_marginBottom="@dimen/picture_selector_padding_6"
        android:visibility="gone"
        android:layout_alignParentBottom="true"/>
    <LinearLayout android:id="@+id/ll_click_area"
        android:layout_width="@dimen/picture_selector_padding_56"
        android:layout_height="@dimen/picture_selector_padding_56"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/picture_selector_padding_10"
        android:paddingTop="@dimen/picture_selector_padding_10"
        android:clickable="true"
        android:gravity="right|top">
        <CheckBox android:id="@+id/cb_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/choose_pic_checkbox_selector"
            android:button="@null"/>
    </LinearLayout>
</RelativeLayout>