<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/dialog_layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/bg_dialog"
        >

    <ImageView
            android:layout_marginLeft="@dimen/picture_selector_padding_8"
            android:id="@+id/dialog_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/inner_animation"
            tools:ignore="ContentDescription"
            />


    <TextView
            android:id="@+id/dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/picture_selector_size_16"
            android:textColor="@color/picture_selector_cor1"
            android:layout_toRightOf="@+id/dialog_progress"
            />
</RelativeLayout>